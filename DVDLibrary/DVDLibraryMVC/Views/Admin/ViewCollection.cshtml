<table class="table table-striped table-hover ">
    <thead>
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>MPAA Rating</th>
        <th>Genre</th>
        <th>Runtime</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var m in Model.Movies)
    {
        <tr>
            <td>@(Model.Movies.IndexOf(m)+1)</td>
            <td>@m.Title</td>
            <td>@m.MPAARating</td>
            <td>@m.Genre</td>
            <td>@(String.Format("{0}h {1}m", m.RunTime/60, m.RunTime%60))</td>
            <td><a href="#">View</a></td>
            <td><a href="#">Delete</a></td>
        </tr>
    }
    </tbody>
</table> 

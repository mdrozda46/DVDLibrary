@model DVDLibraryMVC.Models.MovieCollectionViewModel

@{
    ViewBag.Title = "ViewCollection";
}

<h3>View Collection<input type="text" class="input-sm col-lg-offset-8" placeholder="Movie Name" name="search-nodata" id="search-nodata" data-list=".searchable" autocomplete="on"></h3>



<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>MPAA Rating</th>
            <th>Genre</th>
            <th>Runtime</th>    
            <th>User Rating</th>
            <th>Units in Stock</th>
        </tr>
    </thead>
    <tbody class="searchable">
    @foreach (var m in Model.Movies)
    {
        <tr>
            <td>@(Model.Movies.IndexOf(m) + 1)</td>
            <td>@m.Title</td>
            <td>@m.MPAARating</td>
            <td>@m.Genre</td>
            <td>@(String.Format("{0}h {1}m", m.RunTime/60, m.RunTime%60))</td>
            <td>@m.UserRating</td>
            <td>@m.UnitsInStock</td>
            <td><a href="/Admin/ViewDVD?MovieID=@m.MovieID">View</a></td>
            <td><a href="/Admin/DeleteDvD?MovieID=@m.MovieID">Delete</a></td>
        </tr>
    }
    </tbody>
</table>

@section scripts{
    <script type="text/javascript" src="~/Scripts/app/SearchBar.js"></script>
}